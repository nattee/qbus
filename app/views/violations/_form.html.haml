= simple_form_for(@violation) do |f|
  = f.error_notification
  .row
    .col.s12
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.association :car
          = f.label :car
          = f.full_error :car
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :count
          = f.label :count
          = f.full_error :count
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :month_year
          = f.label :month_year
          = f.full_error :month_year
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.association :datafile
          = f.label :datafile
          = f.full_error :datafile
  = f.button :submit, class: "btn waves-light left"
- if back_link
  = link_to 'Back', back_link, style: "margin-left: 2em", class: "btn white black-text waves-black waves-effect"
