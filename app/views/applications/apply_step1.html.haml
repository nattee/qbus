.row
  .col.s12
    .card
      .card-content
        .card-title
          %h3 สมัครเข้าร่วมโครงการ Q-BUS
        .row
          .col.s12.m3
            = render "current_apply_step"
          .col.s12.m9
            = simple_form_for(@application, url: apply_step1_application_path(@application), method: :post, html: { multipart: true }) do |f|
              %h4 กรอกข้อมูลพื้นฐาน
              .section
                %h5 ข้อมูลผู้ประกอบการ
                .row
                  .input-field.col.s12
                    = text_field_tag 'licensee[name]'
                    = f.label 'licensee[name]', t(:name , scope: 'activerecord.attributes.licensee')
                .row
                  .col.s12
                    %h6 หมวดการเดินรถ
                    = @application.category_text
                .row
                  .input-field.col.s6
                    = f.input :contact
                  .input-field.col.s6
                    = f.input :contact_tel
              .divider
              .section
                .row
                  .col.s12.m8
                    %h5 เอกสารที่เกี่ยวข้อง
                    ให้ผู้สมัครทำการอัพโหลดเอกสารต่อไปนี้ ในรูปแบบไฟล์ภาพถ่ายหรือการแสกนเอกสาร โดยให้ใช้ไฟล์ในรูปแบบ pdf, jpg หรือ png เท่านั้น โดยที่ไฟล์ดังกล่าวจะต้องเห็นรายละเอียดที่ชัดเจน
                    %ol
                      %li หน้าแรกของสัญญาการเดินรถ
                      %li
                        หนังสือยืนยันการเข้าร่วมโครงการ (สามารถดาวน์โหลดได้จาก
                        %a ที่นี่
                        )
                  .col.s12.m4
                .row
                  .col.s12.m6
                    %h6 สัญญาการเดินรถ
                    .input-field
                      = file_field_tag 'attachment[contract_data]'
                    .input-field
                      = text_field_tag 'attachment[contract_file_name]'
                    =#.input-field.file-field
                    =#  .btn
                    =#    %span เลือกไฟล์
                    =#    = file_field_tag 'attachment[contract_data]'
                    =#  .file-path-wrapper
                    =#    = text_field_tag 'attachment[contract_file_name]'
                  .col.s12.m6
                    %h6 เอกสารยืนยันการเข้าร่วมโครงการ
                    .input-field
                      = file_field_tag 'attachment[signup_data]'
                    .input-field
                      = text_field_tag 'attachment[signup_file_name]'
                    =#.input-field.file-field
                    =#  .btn
                    =#    %span เลือกไฟล์
                    =#    = file_field_tag 'attachment[signup_data]'
                    =#  .file-path-wrapper
                    =#    = text_field_tag 'attachment[signup_file_name]'


              .divider
              .section
                %h5 ข้อมูลเส้นทาง
                - if @application.category3?
                  %h6 ไม่ประจำทาง
                - else
                  .row
                    .col.s6
                      .input-field
                        = text_field_tag 'route[start]'
                        = label_tag :asdf, t(:start, scope: 'activerecord.attributes.route')
                      .input-field
                        = text_field_tag 'route[destination]'
                        = label_tag :asdf, t(:destination, scope: 'activerecord.attributes.route')
                    .col.s6
                      .input-field
                        = f.input_field :car_count
                        = f.label :car_count
                      .input-field
                        = f.input_field :trip_count
                        = f.label :trip_count

              = hidden_field_tag 'application[stage]', 'step1'
              = f.button :submit, 'ไปยังขั้นตอนต่อไป', class: "btn waves-light left"



