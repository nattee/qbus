= simple_form_for @application do |f|
  - if f.error_notification
    .row
      .col.s12
        .card-alert.card.gradient-45deg-red-pink
          .card-content.white-text
            %i.material-icons.prefix error
            = strip_tags(f.error_notification)
          %button.close.white-text{type: "button", data: {dismiss: 'alert'}, :area-label => 'Close'}
            %span{:area-hidden => 'true'} Ã—
  .row
    .col.s12
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :number
          = f.label :number
          = f.full_error :number
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :user_id, data: {contrainwidth: 'false'}, collection: User.all, label_method: :name, value_method: :id
          = f.label :user
          = f.full_error :user
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :state, :as => :select, data: {contrainwidth: 'false'}, collection: Application.states_t
          = f.label :state
          = f.full_error :state
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :licensee_id, data: {contrainwidth: 'false'}, collection: Licensee.all, label_method: :name, value_method: :id
          = f.label :licensee
          = f.full_error :licensee
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :route_id, data: {contrainwidth: 'false'}, collection: Route.all, label_method: :name, value_method: :id
          = f.label :route
          = f.full_error :route
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :category, :as => :select, data: {contrainwidth: 'false'}, collection: Application.categories_t
          = f.label :category
          = f.full_error :category
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :appointment_date
          = f.label :appointment_date
          = f.full_error :appointment_date
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :appointment_remark
          = f.label :appointment_remark
          = f.full_error :appointment_remark
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :appointment_user_id, data: {contrainwidth: 'false'}, collection: User.all, label_method: :name, value_method: :id
          = f.label :appointment_user
          = f.full_error :appointment_user
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :awarded_date
          = f.label :awarded_date
          = f.full_error :awarded_date
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :award
          = f.label :award
          = f.full_error :award
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :award_remark
          = f.label :award_remark
          = f.full_error :award_remark
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :contact
          = f.label :contact
          = f.full_error :contact
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :contact_tel
          = f.label :contact_tel
          = f.full_error :contact_tel
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :confirmed_date
          = f.label :confirmed_date
          = f.full_error :confirmed_date
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :submitted_date
          = f.label :submitted_date
          = f.full_error :submitted_date
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :approved_date
          = f.label :approved_date
          = f.full_error :approved_date
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :evaluated_date
          = f.label :evaluated_date
          = f.full_error :evaluated_date
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :car_count
          = f.label :car_count
          = f.full_error :car_count
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :trip_count
          = f.label :trip_count
          = f.full_error :trip_count
  = f.button :submit, class: "btn waves-light left"
- if back_link
  = link_to t(:cancel), back_link, style: "margin-left: 2em", class: "btn white black-text waves-black waves-effect"
