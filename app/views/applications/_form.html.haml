= simple_form_for @application do |f|
  - if f.error_notification
    .row
      .col.s12
        .card-alert.card.gradient-45deg-red-pink
          .card-content.white-text
            %i.material-icons.prefix error
            = strip_tags(f.error_notification)
          %button.close.white-text{type: "button", data: {dismiss: 'alert'}, :area-label => 'Close'}
            %span{:area-hidden => 'true'} Ã—
  .row
    .col.s12
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :number
          = f.label :number
          = f.full_error :number
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.association :user
          = f.label :user
          = f.full_error :user
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :state
          = f.label :state
          = f.full_error :state
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.association :licensee
          = f.label :licensee
          = f.full_error :licensee
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.association :route
          = f.label :route
          = f.full_error :route
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :category
          = f.label :category
          = f.full_error :category
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :appointment_date
          = f.label :appointment_date
          = f.full_error :appointment_date
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :appointment_remark
          = f.label :appointment_remark
          = f.full_error :appointment_remark
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.association :appointment_user
          = f.label :appointment_user
          = f.full_error :appointment_user
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :evaluation_finish_date
          = f.label :evaluation_finish_date
          = f.full_error :evaluation_finish_date
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :award_date
          = f.label :award_date
          = f.full_error :award_date
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :award
          = f.label :award
          = f.full_error :award
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :award_remark
          = f.label :award_remark
          = f.full_error :award_remark
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :contact
          = f.label :contact
          = f.full_error :contact
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :contact_tel
          = f.label :contact_tel
          = f.full_error :contact_tel
  = f.button :submit, class: "btn waves-light left"
- if back_link
  = link_to t(:cancel), back_link, style: "margin-left: 2em", class: "btn white black-text waves-black waves-effect"
