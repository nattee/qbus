  }

.row
  .col.s12
    .card.teal.lighten-4
      .card-content
        .card-title
          %h4 รายการหลักฐาน
      .card-tabs
        %ul.tabs.tabs-fixed-width.tabs-transparent
          - last_cg = nil
          - CriteriaGroup.need_evidence.each do |cg|
            %li.tab.black-text
              %a.black-text{href: "#tab_cg#{cg.id}"}
                #{cg.name_trim}
                - if @missing[cg.id][:ok]
                  (หลักฐานครบ)
                - else
                  (#{@missing[cg.id][:present]}/#{@missing[cg.id][:total]})
      - CriteriaGroup.need_evidence.each do |cg|
        %div{ id: "tab_cg#{cg.id}"}
          .card-content.teal.lighten-5
            = render partial: "process/evidence", locals: {cgroups: [cg]}
