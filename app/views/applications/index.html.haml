.row
  .col.s6.offset-s3
    .card
      .card-content.deep-purple
        .card-title.white-text
          %h1= t(:list) + t(:application, scope: 'activerecord.models')
      .card-content
        %ul.collection
          - @applications.each do |application|
            %li.collection-item.avatar
              %i.material-icons.circle content_paste
              %span.title=application.number
              %p=application.user.name
              .secondary-content
                %a{:href => application_path(application)}
                  %i.material-icons pageview
                %a{:href => edit_application_path(application)}
                  %i.material-icons edit
                %a{"href" => application_path(application), "rel" => "nofollow", "data-method" => "delete", "data-confirm" => t(:confirm_delete)}
                  %i.material-icons delete
      .card-action
        = link_to t(:new), new_application_path
