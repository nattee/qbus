= simple_form_for @criterium do |f|
  - if f.error_notification
    .row
      .col.s12
        .card-alert.card.gradient-45deg-red-pink
          .card-content.white-text
            %i.material-icons.prefix error
            = strip_tags(f.error_notification)
          %button.close.white-text{type: "button", data: {dismiss: 'alert'}, :area-label => 'Close'}
            %span{:area-hidden => 'true'} Ã—
  .row
    .col.s12
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :number
          = f.label :number
          = f.full_error :number
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :name
          = f.label :name
          = f.full_error :name
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :description, class: 'materialize-textarea', style: 'height: 70px;'
          = f.label :description
          = f.full_error :description
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :approach, class: 'materialize-textarea', style: 'height: 100px;'
          = f.label :approach
          = f.full_error :approach
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          = f.input_field :weight
          = f.label :weight
          = f.full_error :weight
      .row
        .input-field.col.s12
          %i.material-icons.prefix help
          /= f.association :criteria_group
          = f.input_field :criteria_group_id, data: {contrainwidth: 'false'}, collection: CriteriaGroup.all, label_method: :name, value_method: :id
          = f.label :criteria_group
          = f.full_error :criteria_group
  = f.button :submit, class: "btn waves-light left"
- if back_link
  = link_to t(:cancel), back_link, style: "margin-left: 2em", class: "btn white black-text waves-black waves-effect"
