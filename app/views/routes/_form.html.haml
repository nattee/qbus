= simple_form_for(@route) do |f|
  = f.error_notification
  .row
    .col.s12
      .row
        .input-field.col.s12
          %i.material-icons.prefix timeline
          = f.label :name, label: "ชื่อเส้นทาง"
          = f.input_field :name
      .row
        .input-field.col.s12
          %i.material-icons.prefix first_page
          = f.label :start, label: "จุดเริ่มต้น"
          = f.input_field :start
      .row
        .input-field.col.s12
          %i.material-icons.prefix last_page
          = f.label :destination, label: "ปลายทาง"
          = f.input_field :destination
      .row
        .input-field.col.s12
          %i.material-icons.prefix local_taxi
          = f.label :car_count, label: "จำนวนรถในเส้นทาง"
          = f.input_field :car_count, :in => 1..100
      .row
        .input-field.col.s12
          %i.material-icons.prefix layers
          = f.label :type, label: "มาตรฐานการเดินรถ"
          = f.input_field :type
  = f.button :submit, class: "btn waves-light left"
- if back_link
  = link_to 'Back', back_link, style: "margin-left: 2em", class: "btn white black-text waves-black waves-effect"
