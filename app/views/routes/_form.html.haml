= simple_form_for(@route) do |f|
  = f.error_notification
  .row
    .col.s12
      .row
        .input-field.col.s12
          %i.material-icons.prefix timeline
          = f.input_field :name
          = f.label :name
          = f.full_error :name
      .row
        .input-field.col.s12
          %i.material-icons.prefix first_page
          = f.input_field :start
          = f.label :start
          = f.full_error :start
      .row
        .input-field.col.s12
          %i.material-icons.prefix last_page
          = f.input_field :destination
          = f.label :destination
          = f.full_error :destination
      .row
        .input-field.col.s12
          %i.material-icons.prefix local_taxi
          = f.input_field :car_count
          = f.label :car_count
          = f.full_error :car_count
      .row
        .input-field.col.s12
          %i.material-icons.prefix layers
          = f.input_field :route_type
          = f.label :route_type
          = f.full_error :route_type
  = f.button :submit, class: "btn waves-light left"
- if back_link
  = link_to 'Back', back_link, style: "margin-left: 2em", class: "btn white black-text waves-black waves-effect"
