.row
  .col.s6.offset-s3
    .card
      .card-content.deep-purple
        .card-title.white-text
          %h1= t(:list) + t(:route, scope: 'activerecord.models')
      .card-content
        %ul.collection
          - @routes.each do |route|
            %li.collection-item.avatar
              %i.material-icons.circle trending_up
              %span.title="#{route.name}"
              %p
                ="#{t(:start, scope: 'activerecord.attributes.route')} #{route.start}"
                %br
                ="#{t(:destination, scope: 'activerecord.attributes.route')} #{route.destination}"
                %br
                ="#{t(:car_count, scope: 'activerecord.attributes.route')} #{route.car_count}"
                %br
                ="#{t(:route_type, scope: 'activerecord.attributes.route')} #{route.route_type}"
              .secondary-content
                %a{:href => route_path(route)}
                  %i.material-icons pageview
                %a{:href => edit_route_path(route)}
                  %i.material-icons edit
                %a{"href" => route_path(route), "rel" => "nofollow", "data-method" => "delete", "data-confirm" => t(:confirm_delete)}
                  %i.material-icons delete
      .card-action
        = link_to t(:new), new_route_path
