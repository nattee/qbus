.row
  .col.s6.offset-s3
    .card
      .card-content.deep-purple
        .card-title.white-text
          =t(:car, scope: 'activerecord.models')
          =@car.id
      .card-content
        .section
          %h6= t(:plate, scope: 'activerecord.attributes.car')
          = @car.plate
        .section
          %h6= t(:chassis, scope: 'activerecord.attributes.car')
          = @car.chassis
        .section
          %h6= t(:application, scope: 'activerecord.attributes.car')
          = @car.application&.to_label
        .section
          %h6= t(:car_type, scope: 'activerecord.attributes.car')
          = @car.car_type
        .section
          %h6= t(:last_accident, scope: 'activerecord.attributes.car')
          = @car.last_accident
        .section
          %h6= t(:last_accident_desc, scope: 'activerecord.attributes.car')
          = @car.last_accident_desc
      .card-action
        = link_to t(:edit), edit_car_path(@car)
        = link_to t(:back), cars_path
