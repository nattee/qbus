.row
  .col.s12
    .card
      .card-content
        .row
          .col.s12.m4.push-m8
            .card
              .card-content
                เมื่อผู้ประเมินได้ทำการบันทึกผลการประเมินแล้ว ให้กรรมการตัดสินผลรางวัลลงในแบบฟอร์มนี้
          .col.s12.m8.pull-m4
            .card-title
              %h4 การตัดสินผลรางวัล
              %h5 บันทึกผลการตัดสิน
            = simple_form_for @application do |f|
              .row
                .col.s12
                  %label
                    = radio_button_tag :award, 'ok'
                    %span ให้รางวัล
              .row
                .col.s12
                  %label
                    = radio_button_tag :award, 'no'
                    %span ไม่ให้รางวัล
              .row
                .input-field.col.s12
                  = f.input :award_remark
              = f.button :submit, 'ยืนยันผลการให้รางวัล'
              = link_to 'ย้อนกลับ', process_awards_path, class: 'waves-effect waves-light green btn'
    .card
      .card-content
        .row
          .col.s12.m8
          .col.s12.m3
        .row
          .col.s12
            %ul.tabs
              %li.tab.col.m3
                %a{href: '#tab_app'}ข้อมูลใบสมัคร
              %li.tab.col.m3
                %a{href: '#tab_evidence'}หลักฐาน
              %li.tab.col.m3
                %a{href: '#tab_eval'}การประเมิน
              %li.tab.col.m3
                %a{href: '#tab_car'}ข้อมูลรถ

          #tab_eval.col.s12
            - last_cg = nil
            - @application.evaluations.joins(:criterium => :criteria_group).order('criteria_groups.id, criteria.number').each do |ev|
              - if ev.criterium.criteria_group != last_cg
                - last_cg = ev.criterium.criteria_group
                .divider
                .row
                  .col.s12
                    %h5= last_cg.name
                .row
                  .col.s4
                    = t(:name, scope: 'activerecord.attributes.criterium')
                  .col.s2
                    ผลการประเมิน
                  .col.s4
                    คำอธิบายผลการประเมิน
              .row
                .col.s4
                  = "#{ev.criterium.number}. #{ev.criterium.name}"
                .col.s2
                  %p
                    = ev.result
                .col.s4
                  %p
                    = ev.description
          #tab_evidence.col.s12
            %h4 รายการหลักฐาน
            = render "evidence"
          #tab_app.col.s12
            .section
              .row
                .col.s12
                  %h5 ข้อมูลใบสมัคร
                  = render partial: "applications/application"
          #tab_route.col.s12
          #tab_car.col.s12
            = render partial: "applications/cars"


