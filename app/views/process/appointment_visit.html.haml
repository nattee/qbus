                            %label
                              = radio_button_tag :visit_car3_windshield, 0,@application.visit_car3_windshield == 0
                              %span ควรปรับปรุง
                        %tr
                          %td ม. 4
                          %td
                            %label
                              = radio_button_tag :visit_car4_chassis, 1, @application.visit_car4_chassis == 1
                              %span ดี
                            %label
                              = radio_button_tag :visit_car4_chassis, 0, @application.visit_car4_chassis == 0
                              %span ควรปรับปรุง
