                              %span ดี
                            %label
                              = radio_button_tag :visit_car2_windshield, 0,@application.visit_car2_windshield == 0
                              %span ควรปรับปรุง
                        %tr
                          %td ม. 3
                          %td
                            %label
                              = radio_button_tag :visit_car3_chassis, 1, @application.visit_car3_chassis == 1
                              %span ดี
                            %label
                              = radio_button_tag :visit_car3_chassis, 0, @application.visit_car3_chassis == 0
                              %span ควรปรับปรุง
                          %td
                            %label
                              = radio_button_tag :visit_car3_tire, 1, @application.visit_car3_tire == 1
                              %span ดี
                            %label
                              = radio_button_tag :visit_car3_tire, 0, @application.visit_car3_tire == 0
                              %span ควรปรับปรุง
                          %td
                            %label
                              = radio_button_tag :visit_car3_light, 1, @application.visit_car3_light == 1
                              %span ดี
                            %label
                              = radio_button_tag :visit_car3_light, 0, @application.visit_car3_light == 0
                              %span ควรปรับปรุง
                          %td
                            %label
