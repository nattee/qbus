.row
  .col.s6.offset-s3
    .card
      .card-content.deep-purple
        .card-title.white-text
          =t(:log, scope: 'activerecord.models')
          =@log.id
      .card-content
        .section
          %h6= t(:application, scope: 'activerecord.attributes.log')
          = @log.application&.to_label
        .section
          %h6= t(:description, scope: 'activerecord.attributes.log')
          = @log.description
      .card-action
        = link_to t(:edit), edit_log_path(@log)
        = link_to t(:back), logs_path
