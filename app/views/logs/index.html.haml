.row
  .col.s6.offset-s3
    .card
      .card-content.deep-purple
        .card-title.white-text
          %h1= t(:list) + t(:log, scope: 'activerecord.models')
      .card-content
        %ul.collection
          - @logs.each do |log|
            %li.collection-item.avatar
              %i.material-icons.circle library_books
              %span.title="#{log.application.to_label}"
              %p
                ="#{t(:description, scope: 'activerecord.attributes.log')} #{log.description}"
              .secondary-content
                %a{:href => log_path(log)}
                  %i.material-icons pageview
                %a{:href => edit_log_path(log)}
                  %i.material-icons edit
                %a{"href" => log_path(log), "rel" => "nofollow", "data-method" => "delete", "data-confirm" => t(:confirm_delete)}
                  %i.material-icons delete
      .card-action
        = link_to t(:new), new_log_path
