= simple_form_for(@user) do |f|
  - if f.error_notification
    .row
      .col.s12
        .card-alert.card.gradient-45deg-red-pink
          .card-content.white-text
            %i.material-icons.prefix error
            = strip_tags(f.error_notification)
          %button.close.white-text{type: "button", data: {dismiss: 'alert'}, :area-label => 'Close'}
            %span{:area-hidden => 'true'} ×
  /= @user.errors.full_messages.each do |msg|
  /  = msg
  /  %br
  .row
    .col.s12
      .row
        .input-field.col.s12
          %i.material-icons.prefix face
          = f.input_field :name
          = f.label :name
          = f.full_error :name
      .row
        .input-field.col.s12
          %i.material-icons.prefix email
          = f.input_field :email
          = f.label :email
          = f.full_error :email

      .row
        .input-field.col.s12
          %i.material-icons.prefix lock
          = f.input_field :password
          = f.label :password
          = f.full_error :password
      .row
        .input-field.col.s12
          %i.material-icons.prefix lock
          = f.input_field :password_confirmation
          = f.label :password_confirmation
          = f.full_error :password_confirmation
      .row
        .input-field.col.s12
          %i.material-icons.prefix person
          = f.input_field :roles
          = f.label :roles, label: "สิทธิ์ในการใช้งาน"
      .row
        .input-field.col.s12
          %i.material-icons.prefix person
          = f.label :roles, label: "สิทธิ์ในการใช้งาน"
      .row
        .input-field.col.s11.offset-s1
          %p
            = f.label :admin  do
              = f.input_field :admin, as: :boolean
              %span ผู้ดูแลระบบ
          %p
            = f.label :verifier  do
              = f.input_field :verifier, as: :boolean
              %span เจ้าหน้าที่ตรวจสอบใบสมัคร
          %p
            = f.label :surveyor  do
              = f.input_field :surveyor, as: :boolean
              %span เจ้าหน้าที่ประเมิน
      /.row
      /  .input-field.col.s12
      /    %i.material-icons.prefix face
      /    = f.radio_button :body, "m"
      /    = f.label :gender_m, "Male"
      /    = f.radio_button :body, "f"
      /    = f.label :gender_f, "Female"
      /.row
      /  .input-field.col.s12
      /    %i.material-icons.prefix published
      /    = f.check_box :body, class:"checkbox"
      /    = f.label :published
      /.row
      /  .input-field.col.s12
      /    %i.material-icons.prefix cake
      /    = f.text_field :body, class:"datepicker"
      /    = f.label :birthday
  = f.button :submit, class: "btn waves-light left"
- if back_link
  = link_to 'Back', back_link, style: "margin-left: 2em", class: "btn white black-text waves-black waves-effect"

