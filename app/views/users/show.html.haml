.row
  .col.s6.offset-s3
    .card
      .card-content.deep-purple
        .card-title.white-text
          =t(:user, scope: 'activerecord.models')
          =@user.id
      .card-content
        .section
          %h6= t(:name, scope: 'activerecord.attributes.user')
          = @user.name
        .section
          %h6= t(:email, scope: 'activerecord.attributes.user')
          = @user.email
        .section
          %h6= t(:activated, scope: 'activerecord.attributes.user')
          = @user.activated
        .section
          %h6= t(:activated_at, scope: 'activerecord.attributes.user')
          = l(@user.activated_at, format: '%d %B %Y', default: nil)
        .section
          %h6 สิทธิ์ในการใช้งาน
          %p
            %ul
              - @user.role_array.each do |r|
                %li= r
        .section
          - if @user.all_provinces
            ใช้งานได้ทุกจังหวัด
          - else
            ใช้ได้เฉพาะจังหวัด #{User.province_code_hash()[@user.province]}
      .card-action
        = link_to t(:edit), edit_user_path(@user)
        = link_to t(:back), users_path
