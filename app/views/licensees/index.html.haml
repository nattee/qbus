.row
  .col.s6.offset-s3
    .card
      .card-content.deep-purple
        .card-title.white-text
          %h1= t(:list) + t(:licensee, scope: 'activerecord.models')
      .card-content
        %ul.collection
          - @licensees.each do |licensee|
            %li.collection-item.avatar
              %i.material-icons.circle people
              %span.title="#{licensee.name}"
              %p
                ="#{t(:license_no, scope: 'activerecord.attributes.licensee')} #{licensee.license_no}"
                %br
                ="#{t(:license_expire, scope: 'activerecord.attributes.licensee')} #{licensee.license_expire}"
                %br
                ="#{t(:contact, scope: 'activerecord.attributes.licensee')} #{licensee.contact}"
                %br
                ="#{t(:contact_tel, scope: 'activerecord.attributes.licensee')} #{licensee.contact_tel}"
              .secondary-content
                %a{:href => licensee_path(licensee)}
                  %i.material-icons pageview
                %a{:href => edit_licensee_path(licensee)}
                  %i.material-icons edit
                %a{"href" => licensee_path(licensee), "rel" => "nofollow", "data-method" => "delete", "data-confirm" => t(:confirm_delete)}
                  %i.material-icons delete
      .card-action
        = link_to t(:new), new_licensee_path
