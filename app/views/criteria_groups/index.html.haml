.row
  .col.s6.offset-s3
    .card
      .card-content.deep-purple
        .card-title.white-text
          %h1= t(:list) + t(:criteria_group, scope: 'activerecord.models')
      .card-content
        %ul.collection
          - @criteria_groups.each do |criteria_group|
            %li.collection-item.avatar
              %i.material-icons.circle spellcheck
              %span.title="#{criteria_group.name} [#{criteria_group.group_weight}]"
              %p="#{criteria_group.criterium.count} #{t(:criterium, scope: 'activerecord.models')}"
              .secondary-content
                %a{:href => criteria_group_path(criteria_group)}
                  %i.material-icons pageview
                %a{:href => edit_criteria_group_path(criteria_group)}
                  %i.material-icons edit
                %a{"href" => criteria_group_path(criteria_group), "rel" => "nofollow", "data-method" => "delete", "data-confirm" => t(:confirm_delete)}
                  %i.material-icons delete
      .card-action
        = link_to t(:new), new_criteria_group_path
