.row
  .col.s6.offset-s3
    .card
      .card-content.deep-purple
        .card-title.white-text
          %h1= t(:list) + t(:attachment, scope: 'activerecord.models')
      .card-content
        %ul.collection
          - @attachments.each do |attachment|
            %li.collection-item.avatar
              %i.material-icons.circle attachment
              %span.title=attachment.filename
              %p=attachment.updated_at
              .secondary-content
                %a{:href => attachment_path(attachment)}
                  %i.material-icons pageview
                %a{:href => edit_attachment_path(attachment)}
                  %i.material-icons edit
                %a{"href" => attachment_path(attachment), "rel" => "nofollow", "data-method" => "delete", "data-confirm" => t(:confirm_delete)}
                  %i.material-icons delete
      .card-action
        = link_to t(:new), new_attachment_path
